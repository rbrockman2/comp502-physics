noise_cv = MN(1+setsizeN:2*setsizeN,:);
noise_test = MN(1+2*setsizeN:3*setsizeN,:);

signal_train = MS(1:setsizeS,:);
signal_cv = MS(1+setsizeS:2*setsizeS,:);
signal_test = MS(1+2*setsizeS:3*setsizeS,:);

